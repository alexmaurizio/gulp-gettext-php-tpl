{
  "name": "gulp-gettext-php-tpl",
  "version": "1.2.2",
  "description": "Gulp plugin to parse .php and .tpl (Smarty) files, detect GNU Gettext usages in it and compile a .POT file. It can then merge .PO/.MO files with the newly generated template",
  "main": "index.js",
  "dependencies": {
    "concat-with-sourcemaps": "latest",
    "gettext-parser": "^1.4.0",
    "path": "^0.12.7",
    "plugin-error": "latest",
    "through2": "^2.0.3",
    "vinyl": "latest"
  },
  "devDependencies": {
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-uglify": "^3.0.0",
    "fancy-log": "latest"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexmaurizio/gulp-gettext-php-tpl.git"
  },
  "keywords": [
    "gulp",
    "gulpplugin",
    "php",
    "tpl",
    "smarty",
    "gettext",
    "xgettext",
    "msgmerge",
    "msgfmt"
  ],
  "author": "Alessandro Maurizio <info@alexmaurizio.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/alexmaurizio/gulp-gettext-php-tpl/issues"
  },
  "homepage": "https://github.com/alexmaurizio/gulp-gettext-php-tpl#readme"
}
